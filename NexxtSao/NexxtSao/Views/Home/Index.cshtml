@model NexxtSao.Models.MVC.User

@{
    ViewBag.Title = "Home Page";
}

<style>
    .jumbotron1 {
        background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url("../Content/ImgCarrusel/banner1.svg");
        background-size: 100%, 100%;
        color: white;
    }

    .jumbotron2 {
        background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url("../Content/ImgCarrusel/banner2.svg");
        background-size: 100%, 100%;
        color: white;
    }

    .jumbotron3 {
        background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url("../Content/ImgCarrusel/banner3.svg");
        background-size: 100%, 100%;
        color: white;
    }
</style>

<div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="jumbotron jumbotron-fluid jumbotron1">
                <div class="container">
                    @if (Model != null && !string.IsNullOrEmpty(Model.Company.Logo))
                    {
                        <img src="@Url.Content(Model.Company.Logo)" alt="Image" style="width:100px;height:100px;max-width: 100%; height: auto;" />
                    }
                    @if (Model != null)
                    {<h1 class="display-4"><strong>@Html.DisplayFor(model => model.Company.Name)</strong></h1>
                    <p class="lead">@Resources.Resource.NombreSoftware</p>
                }
                else
                {<h1 class="display-4"><strong>Infoplanet-Team</strong></h1>}

                    @if (Model == null)
                    {
                        <p class="lead">@Resources.Resource.NombreSoftware</p>}
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="jumbotron jumbotron-fluid jumbotron2">
                <div class="container">
                    @if (Model != null && !string.IsNullOrEmpty(Model.Company.Logo))
                    {
                        <img src="@Url.Content(Model.Company.Logo)" alt="Image" style="width:100px;height:100px;max-width: 100%; height: auto;" />
                    }
                    @if (Model != null)
                    {<h1 class="display-4"><strong>@Html.DisplayFor(model => model.Company.Name)</strong></h1>
                    <p class="lead">@Resources.Resource.NombreSoftware</p>
                }
                else
                {<h1 class="display-4"><strong>Infoplanet-Team</strong></h1>}

                    @if (Model == null)
                    {
                        <p class="lead">@Resources.Resource.NombreSoftware</p>}
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="jumbotron jumbotron-fluid jumbotron3">
                <div class="container">
                    @if (Model != null && !string.IsNullOrEmpty(Model.Company.Logo))
                    {
                        <img src="@Url.Content(Model.Company.Logo)" alt="Image" style="width:100px;height:100px;max-width: 100%; height: auto;" />
                    }
                    @if (Model != null)
                    {<h1 class="display-4"><strong>@Html.DisplayFor(model => model.Company.Name)</strong></h1>
                    <p class="lead">@Resources.Resource.NombreSoftware</p>
                }
                else
                {<h1 class="display-4"><strong>Infoplanet-Team</strong></h1>}

                    @if (Model == null)
                    {
                        <p class="lead">@Resources.Resource.NombreSoftware</p>}
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-sm-4">
        <div class="card shadow p-3 mb-5 bg-white rounded" style="width: 18rem; text-align:justify">
            <div style="text-align:center">
                <img src="~/Content/ImgHomePage/ImgAgenda1.gif" class="card-img-top" alt="Image" style="width:100px;height:100px;max-width: 100%; height: auto;">
            </div>
            <div class="card-body">
                <h5 class="card-title">@Resources.Resource.Home_Card1_Agenda</h5>
                <p class="card-text">@Resources.Resource.CardCitas_Texto</p>
                @if (Model != null)
                {
                    <a href="@Url.Action("Index", "Calendar", new { })" class="btn btn-outline-info btn-sm">Agenda</a>
                }
            </div>

        </div>
    </div>
    <div class="col-sm-4">
        <div class="card shadow p-3 mb-5 bg-white rounded" style="width: 18rem; text-align:justify">
