@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(document).ready(function ()
        {
            $("#TreatmentCategoryId").change(function ()
            {
                $("#TreatmentId").empty();
                $("#Precio").val(0);
                $("#Cantidad").val(0);
                $("#Total").val(0);
                $("#TreatmentId").append('<option value="0">[Seleccione Item...]</option>');
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetTratamiento")',
                    dataType: 'json',
                    data: { CategoryId: $("#TreatmentCategoryId").val() },
                    success: function (data)
                    {
                        $.each(data, function (i, data)
                        {
                            $("#TreatmentId").append('<option value="'
                             + data.TreatmentId + '">'
                             + data.Servicio + '</option>');
                        });
                    },
                    error: function (ex) {
                        alert('Error de Lectura de Relacion' + ex);
                    }
                });
                return false;
            })

            //Para buscar el porcentaje que le corresponde al Odontologo segun
            //la categoria de Tratamientos a la cual pertenece

            $("#DentistId").change(function ()
            {
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("GetDentist")',
                        dataType: 'json',
                        data: { dentistId: $("#DentistId").val(), categoryId: $("#TreatmentCategoryId").val() },
                        success: function (data)
                        {
                            //console.log(data);
                           $("#TasaProfesional").val(data);
                        },
                        error: function (ex)
                        {
                            alert('Error de Lectura de Relacion' + ex);
                        }
                    });
                    return false;
            })

            $("#LevelPriceId").change(function ()
            {
                $("#Precio").empty();
                $("#Cantidad").val(0);
                $("#Total").val(0);
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("GetPrecio")',
                        dataType: 'json',
                        data: { tratamientoId: $("#TreatmentId").val(), LevelPriceId: $("#LevelPriceId").val() },
                        success: function (data)
                        {
                            //console.log(data);
                           $("#Precio").val(data);
                        },
                        error: function (ex)
                        {
                            alert('Error de Lectura de Relacion' + ex);
                        }
                    });
                    return false;
            })

            $("#TreatmentId").change(function ()
            {
                $("#Precio").val(0);
                $("#Cantidad").val(0);
                $("#Total").val(0);
             });

            $("#Precio, #Cantidad").on("input", function ()
            {
                var val1 = parseInt($('#Precio').val());
                var val2 = parseInt($('#Cantidad').val());

                if (!isNaN(val1) && !isNaN(val2))
                    $('#Total').val(val1 * val2);
            });
        });
    </script>

}